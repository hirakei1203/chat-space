.wrapper

  =render 'shared/side_bar'

  .chat-main
    .chat-main__main-header
      .chat-main__main-header__left-box
        .chat-main__main-header__left-box__current-group
          = @group.name
        .chat-main__main-header__left-box__member-list
          .chat-main__main-header__left-box__member-list__content
            Member: 
            - @group.users.each do |user|
              = user.name
      
      .chat-main__main-header__edit-botton
        =link_to 'edit' do
          %p Edit

    .chat-main__messages
      = render @messages

    
    .form
      = form_for([@group, @message], html: {id: "form__switch"}) do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'


  

