.flashbox
  %p グループを作成しました


.chatside
  .chatside__side-header
    %p User name
    %ul
      %li
        =link_to "xxx@co.jp", class: "new-group" do
          = fa_icon 'edit'
      %li
        =link_to "xxx@co.jp", class: "new-group" do
          = fa_icon 'cog'

  .chatside__groups
    .chatside__groups__group
      %p{class:"group-name"} group name1
      %p{class:"latest-message"} hello!

    .chatside__groups__group
      %p{class:"group-name"} group name2
      %p{class:"latest-message"} Good morning!

.chat-main
  .chat-main__main-header
    .chat-main__main-header__left-box
      .chat-main__main-header__left-box__current-group
        %p 現在のグループ名
      .chat-main__main-header__left-box__member-list
        %p メンバーリスト: User name
    
    .chat-main__main-header__edit-botton
      %p Edit

  .chat-main__messages
    .chat-main__messages__message
      .chat-main__messages__message__upper-info
        .chat-main__messages__message__upper-info__talker
          %p 山田太郎
        .chat-main__messages__message__upper-info__date
          %p 2019/10/14
      .chat-main__messages__message__text
        %p abcdefghijklmn

    .chat-main__messages__message
      .chat-main__messages__message__upper-info
        .chat-main__messages__message__upper-info__talker
          %p 山田太郎
        .chat-main__messages__message__upper-info__date
          %p 2019/10/14
      .chat-main__messages__message__text
        %p abcdefghijklmn

  .chat-main__form
    .chat-main__form__new-message
      .chat-main__form__new-message__input-box
        %input{class: "text",type: "text",placeholder: "type a message"}
        %label.upload-label{for: "upload-icon"}
          %i.fa.fa-picture-o
          %input{id: "upload-icon", type: "file"}
      .chat-main__form__new-message__commit
        %input{class: "submit_btn", type: "submit", value: "SEND"}
  

